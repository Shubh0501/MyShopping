<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/mainBackgound">

    <TextView
        android:id="@+id/customernametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/customerphonenumbertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/customernametext"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/customerpasswordtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/customerphonenumbertext"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/customershowpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:text="@string/show_password"
        android:layout_marginTop="20dp"
        android:layout_below="@id/customerpasswordtext"
        android:background="@color/mainBackgound"
        android:textStyle="bold"
        />


    

</RelativeLayout>