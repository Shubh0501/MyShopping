<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mainBackgound"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/mainBackgound"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shoppingcardcreditstext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/shoppingcardbanknametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:layout_below="@id/shoppingcardcreditstext"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:id="@+id/shoppingcardcardnumbertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/shoppingcardcreditstext"
                android:textColor="@color/colorText"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/shoppingcardbanknametext"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>