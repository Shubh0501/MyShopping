<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mainBackgound"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mallusernametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/mallnametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@id/mallusernametext"/>

    <TextView
        android:id="@+id/mallownernametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@id/mallnametext"/>

    <TextView
        android:id="@+id/mallownerphonenumbertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@id/mallownernametext"/>

    <TextView
        android:id="@+id/mallpasswordtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@id/mallownerphonenumbertext"/>

    <Button
        android:id="@+id/mallshowpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:text="@string/show_password"
        android:layout_marginTop="20dp"
        android:layout_below="@id/mallpasswordtext"
        android:background="@color/mainBackgound"
        android:textStyle="bold"/>
</RelativeLayout>