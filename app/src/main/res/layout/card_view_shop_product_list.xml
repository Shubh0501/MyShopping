<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mainBackgound"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/shopproductnametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/shopproductpricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_below="@id/shopproductnametext"
        />

    <TextView
        android:id="@+id/shopproductcategorytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_below="@id/shopproductnametext"
        android:layout_alignBottom="@id/shopproductpricetext"/>



</RelativeLayout>