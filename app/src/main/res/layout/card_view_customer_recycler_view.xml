<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mainBackgound"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/mainBackgound"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/customerproductnametext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="30sp"
                android:text="TEXT"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/customershopnametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:text="TEXT"
                android:layout_below="@id/customerproductnametext"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/customerquantitytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="TEXT"
                android:textSize="24sp"
                android:layout_below="@id/customerproductnametext"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/customerdatetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@id/customershopnametext"
                android:text="TEXT"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>